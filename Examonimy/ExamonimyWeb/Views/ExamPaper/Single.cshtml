@{
    ViewData["Title"] = "Chi tiết đề thi";
    Layout = "_TeacherLayout";
}
@model ExamPaperSingleViewModel
<div>
    @await Html.PartialAsync("_PageHeadingPartial", "Chi tiết đề thi")
    <div class="flex justify-between">
        <div>
            <a href="/exam-paper" class="text-base font-semibold text-violet-700 hover:text-violet-600 flex items-center gap-x-4">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" data-slot="icon" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 15.75 3 12m0 0 3.75-3.75M3 12h18" />
                </svg>
                Quay lại
            </a>
        </div>
        <div class="flex items-center gap-x-6">
            <a href="/exam-paper/edit/@Model.ExamPaper.Id" class="bg-white rounded-md px-5 py-3 text-green-600 hover:text-green-500 font-semibold text-base flex items-center gap-x-3">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" data-slot="icon" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                </svg>
                Sửa               
            </a>
            <button type="button" id="delete-btn" class="bg-white rounded-md px-5 py-3 text-red-600 hover:text-red-500 font-semibold text-base flex items-center gap-x-3">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" data-slot="icon" class="w-5 h-5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                </svg>
                Xóa
            </button>
            <div id="confirm-delete-modal-container"></div>
        </div>
    </div>
</div>
<div class="flex justify-center">
    <div class="w-1/2">
        <div id="exam-paper-detail-container" data-exam-paper-id="@Model.ExamPaper.Id" class="mb-10 p-8 bg-white rounded-lg">           
            <div class="flex gap-x-28">
                <div>
                    <div class="mb-10">
                        <h5 class="mb-3 font-semibold text-gray-900">Mã đề thi</h5>
                        <p class="font-normal text-gray-700">@Model.ExamPaper.ExamPaperCode</p>
                    </div>
                    <div>
                        <h5 class="mb-3 font-semibold text-gray-900">Tác giả</h5>
                        <p class="font-normal text-gray-700">@Model.ExamPaper.Author.FullName</p>
                    </div>
                </div>
                          
                <div>
                    <div class="mb-10">
                        <h5 class="mb-3 font-semibold text-gray-900">Môn học</h5>
                        <p class="font-normal text-gray-700">@Model.ExamPaper.Course.Name</p>
                    </div>
                    <div>
                        <h5 class="mb-3 font-semibold text-gray-900">Ngày tạo</h5>
                        <p class="font-normal text-gray-700">20/12/2023</p>
                    </div>                 
                </div>
            </div>

        </div> 
        <div id="question-list-container" class="space-y-8">

        </div>
    </div>
</div>
<script src="~/js/pages/exam-paper-single.page.js" type="module"></script>
