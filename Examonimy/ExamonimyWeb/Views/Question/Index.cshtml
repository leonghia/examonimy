@{
    ViewData["Title"] = "Question bank";
    Layout = "_AdminSidebar";
}
@model QuestionBankViewModel
<div>
    @await Html.PartialAsync("_PageHeadingPartial", "Ngân hàng câu hỏi")
    <div class="flex items-center justify-between">
        <form class="basis-1/2">
            <label for="default-search" class="mb-2 text-sm font-medium text-gray-900 sr-only dark:text-white">Search</label>
            <div class="relative">
                <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                    <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z" />
                    </svg>
                </div>
                <input type="search" id="default-search" class="block w-full p-4 ps-10 text-sm text-gray-900 border border-transparent rounded-lg bg-white focus:ring-transparent focus:border-transparent dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-violet-500 dark:focus:border-violet-500" placeholder="Tìm kiếm câu hỏi tại đây..." required>
                <button type="submit" class="text-white absolute end-2.5 bottom-2.5 bg-violet-700 hover:bg-violet-800 focus:ring-4 focus:outline-none focus:ring-violet-300 font-medium rounded-lg text-sm px-4 py-2 dark:bg-violet-600 dark:hover:bg-violet-700 dark:focus:ring-violet-800">Tìm kiếm</button>
            </div>
        </form>

        <div class="hidden sm:flex sm:items-baseline sm:space-x-8">
            <div id="desktop-menu-0" class="relative inline-block text-left">
                <div>
                    <button type="button" id="question-type-dropdown-btn" class="group inline-flex items-center justify-center text-sm font-medium text-gray-700 hover:text-gray-900" aria-expanded="false">
                        <span>Dạng câu hỏi</span>
                        <span id="selected-question-type" class="ml-1.5 rounded bg-gray-200 px-1.5 py-0.5 text-xs font-semibold tabular-nums text-gray-700">Tất cả</span>
                        <svg class="-mr-1 ml-1 h-5 w-5 flex-shrink-0 text-gray-400 group-hover:text-gray-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                            <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd" />
                        </svg>
                    </button>
                </div>

                <!--
                  Entering: "transition ease-out duration-100"
                    From: "transform opacity-0 scale-95"
                    To: "transform opacity-100 scale-100"
                  Leaving: "transition ease-in duration-75"
                    From: "transform opacity-100 scale-100"
                    To: "transform opacity-0 scale-95"
                -->
                <div id="question-type-dropdown" class="opacity-0 pointer-events-none absolute right-0 z-10 mt-2 origin-top-right rounded-md bg-white p-4 shadow-sm focus:outline-none">
                    <form class="space-y-4">
                        <div class="flex items-center">
                            <input id="question-type-0" name="question-type" value="0" type="radio" class="h-4 w-4 border-gray-300 text-violet-600 focus:ring-violet-500">
                            <label for="question-type-0" class="ml-3 whitespace-nowrap pr-6 text-sm font-medium text-gray-900">Tất cả</label>
                        </div>
                        @foreach (var questionType in Model.QuestionTypes)
                        {
                            <div class="flex items-center">
                                <input id="question-type-@questionType.Id" name="question-type" value="@questionType.Id" type="radio" class="h-4 w-4 border-gray-300 text-violet-600 focus:ring-violet-500">
                                <label for="question-type-@questionType.Id" class="ml-3 whitespace-nowrap pr-6 text-sm font-medium text-gray-900">@questionType.Name</label>
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="mb-10">
        <div class="mt-8 flow-root">
            <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
                    <div class="overflow-hidden sm:rounded-lg">
                        <div id="question-table-container">
                            
                        </div>

                        <div id="pagination-container">
                            
                        </div>                      
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="flex items-center gap-2">
    <button title="Tạo câu hỏi mới" type="button" class="rounded-full bg-violet-600 p-2 text-white shadow-sm hover:bg-violet-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-violet-600">
        <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path d="M10.75 4.75a.75.75 0 00-1.5 0v4.5h-4.5a.75.75 0 000 1.5h4.5v4.5a.75.75 0 001.5 0v-4.5h4.5a.75.75 0 000-1.5h-4.5v-4.5z" />
        </svg>
    </button>
    <a href="/question/create" class="text-sm font-semibold text-violet-600 hover:text-violet-500">Tạo câu hỏi mới</a>
</div>
<script src="~/js/pages/question-bank.page.js" type="module"></script>