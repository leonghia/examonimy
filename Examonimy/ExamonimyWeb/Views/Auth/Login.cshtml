@{
    ViewData["Title"] = "Đăng nhập";
}
<div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">  

    <div class="rounded-md bg-white shadow-sm sm:mx-auto sm:w-full sm:max-w-[480px] py-10">
        <img class="mx-auto h-10 w-auto" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company">

        <h2 class="mt-6 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Đăng nhập Examonimy</h2>

        <div class="px-6 py-12 sm:px-12">
            <form class="space-y-6" id="login-form">
                <div>
                    <label for="email" class="block text-sm font-medium leading-6 text-gray-900">Email của bạn</label>
                    <div class="mt-2">
                        <input id="email" name="email" type="email" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6 bg-gray-100">
                    </div>
                </div>

                <div>
                    <label for="password" class="block text-sm font-medium leading-6 text-gray-900">Mật khẩu</label>
                    <div class="mt-2">
                        <input id="password" name="password" type="password" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6 bg-gray-100">
                    </div>
                </div>

                <div class="flex items-center justify-between">
                    <div class="flex items-center">
                        <input id="remember-me" name="remember-me" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600">
                        <label for="remember-me" class="ml-3 block text-sm leading-6 text-gray-900">Lưu tài khoản</label>
                    </div>

                    <div class="text-sm leading-6">
                        <a href="#" class="font-semibold text-indigo-600 hover:text-indigo-500">Bạn quên mật khẩu?</a>
                    </div>
                </div>

                <div>
                    <button type="button" id="login-btn" class="flex items-center w-full h-10 justify-center rounded-md bg-violet-300 px-3 py-1.5 text-sm font-semibold leading-6 text-violet-800 hover:bg-violet-400 hover:text-violet-900"><span id="login-btn-text">Đăng nhập</span></button>
                </div>
            </form>

            
        </div>

        <p class="text-center text-sm text-gray-500">
            Bạn chưa có tài khoản?
            <a href="/register" class="font-semibold leading-6 text-indigo-600 hover:text-indigo-500">Đăng ký mới ngay</a>
        </p>
    </div>
</div>
<script src="~/js/pages/login.page.js" type="module"></script>
